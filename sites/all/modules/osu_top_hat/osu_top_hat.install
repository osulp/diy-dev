<?php
/**
 * @file osu_top_hat_install
 *
 * Install default settings for the osu_top_hat
 *
 */
function osu_top_hat_install(){
  $settings = array(
      'hide_utility' => 0,
      'show_search'  => 1,
      'vso_option'   => 0,
      );

  variable_set('osu_top_hat_settings', $settings);
}

function osu_top_hat_uninstall() {
  variable_del('osu_top_hat_settings');
}

